@model PagedList.IPagedList<QuanLyVeSo_MVC.DTO.Giai>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Danh sách giải";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách giải</h2>

<p>
    <a class="btn btn-primary" href='@Url.Action("Create", "Giais")'>Thêm mới</a>
</p>

@using (Html.BeginForm("Index", "Giais", FormMethod.Get))
{
    <p>
        Tìm theo Tên Giải: @Html.TextBox("searchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Tìm kiếm" /> |
        <a class="btn btn-warning" href='@Url.Action("Index", "Giais")'>Tải lại</a>
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Mã giải", "Index", new { currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Tên giải", "Index", new { currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Số tiền nhận", "Index", new { currentFilter = ViewBag.CurrentFilter })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaGiai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenGiai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoTienNhan)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaGiai }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaGiai }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaGiai })
            </td>
        </tr>
    }

</table>
<br />
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) trên @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
