@model PagedList.IPagedList<QuanLyVeSo_MVC.DTO.CongNo>
    @using PagedList.Mvc;
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

    @{
        ViewBag.Title = "Danh sách công nợ";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h2>Danh sách công nợ</h2>

    <p>
        <a class="btn btn-primary" href='@Url.Action("Create", "CongNo")'>Thêm mới</a>
    </p>

    @using (Html.BeginForm("Index", "CongNo", FormMethod.Get))
    {
        <p>
            Tìm theo tên đại lý: @Html.TextBox("searchString", ViewBag.CurrentFilter as string)
            <input type="submit" value="Tìm kiếm" /> |
            <a class="btn btn-warning" href='@Url.Action("Index", "CongNo")'>Tải lại</a>
        </p>
    }

    <table class="table">
        <tr>
            <th>
                @Html.ActionLink("Mã công nợ", "Index", new { currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Tên đại lý", "Index", new { currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Ngày nợ", "Index", new { currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Số tiền nợ", "Index", new { currentFilter = ViewBag.CurrentFilter })
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaCongNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DaiLy.TenDaiLy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoTienNo)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaCongNo }) |
                    @Html.ActionLink("Chi tiết", "Detail", new { id = item.MaCongNo }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaCongNo })
                </td>
            </tr>
        }

    </table>
    <br />
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) trên @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
            new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
