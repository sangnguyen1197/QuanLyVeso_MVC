@model PagedList.IPagedList<QuanLyVeSo_MVC.DTO.SoLuongDK>
    @using PagedList.Mvc;
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

    @{
        ViewBag.Title = "Danh sách số lượng đăng ký";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h2>Danh sách số lượng đăng ký</h2>

    <p>
        <a class="btn btn-primary" href='@Url.Action("Create", "SLDangKy")'>Thêm mới</a>
    </p>

    @using (Html.BeginForm("Index", "SLDangKy", FormMethod.Get))
    {
        <p>
            Tìm theo Tên đại lý: @Html.TextBox("searchString", ViewBag.CurrentFilter as string)
            <input type="submit" value="Tìm kiếm" /> |
            <a class="btn btn-warning" href='@Url.Action("Index", "SLDangKy")'>Tải lại</a>
        </p>
    }
    
        <table class="table">
            <tr>
                <th>
                    @Html.ActionLink("Mã số lượng đăng ký:", "Index", new { currentFilter = ViewBag.CurrentFilter })
                </th>
                <th>
                    @Html.ActionLink("Tên đại lý", "Index", new { currentFilter = ViewBag.CurrentFilter })
                </th>
                <th>
                    @Html.ActionLink("Ngày đăng ký:", "Index", new { currentFilter = ViewBag.CurrentFilter })
                </th>
                <th>
                    @Html.ActionLink("Số lượng đăng ký:", "Index", new { currentFilter = ViewBag.CurrentFilter })
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaSoLuongDK)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DaiLy.TenDaiLy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayDK)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoLuongDK1)
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.MaSoLuongDK }) |
                        @Html.ActionLink("Chi tiết", "Detail", new { id = item.MaSoLuongDK }) |
                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaSoLuongDK })
                    </td>
                </tr>
            }

        </table>
        <br />
        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) trên @Model.PageCount

        @Html.PagedListPager(Model, page => Url.Action("Index",
                                    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
